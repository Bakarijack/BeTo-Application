<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityfiles.Profile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rellog"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/profile_section">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:src="@drawable/cameraa"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:id="@+id/addProfilePic"
                android:layout_marginLeft="70dp"
                android:backgroundTint="@color/white"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:src="@drawable/userlogo" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rellog"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User : "
                        android:textSize="18dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/orange"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"/>
                    <EditText
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:backgroundTint="@color/orange"
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/userName"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone : "
                        android:textSize="18dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/orange"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"/>
                    <EditText
                        android:layout_width="255dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:backgroundTint="@color/orange"
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/phone"/>

                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/orange"
                    android:background="@drawable/save_button"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:id="@+id/saveButton"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="right"
                    android:layout_marginTop="40dp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:background="@drawable/bottom_shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>